<%-include('include/_header') %>
    <main id='site-main'>
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"> <i class="fas fa-angle-double-left"></i> All User</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
                <span class="text-light">Use the below form to update Account</span>
            </div>
            <form id="update_user" method="POST">
                <div class="new_user">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="name" value="<%= user.name %>" placeholder="Nikunj Gupta">
                    </div>
                    <div class="form-group">
                        <label for="name" class="text-light">Phone Number</label>
                        <input type="text" name="phone" value="<%= user.phone %>" placeholder="7037206550">
                    </div>
                    <div class="form-group">
                        <label for="address" class="text-light">Address</label>
                        <input type="text" name="address" value="<%= user.address %>" placeholder="Aligarh">
                    </div>
                    <div class="form-group">
                        <label for="debit" class="text-light">Debit</label>
                        <input type="text" name="debit" value="<%= user.debit %>" placeholder="0000">
                    </div>
                    <div class="form-group">
                        <label for="credit" class="text-light">credit</label>
                        <input type="text" name="credit" value="<%= user.credit %>" placeholder="0000">
                    </div>
                    <div class="form-group">
                        <label for="advance" class="text-light">Advance</label>
                        <input type="text" name="advance" value="<%= user.advance %>" placeholder="0000">
                    </div>
                    <div class="form-group">
                        <label for="Loan" class="text-light">Loan</label>
                        <input type="text" name="loan" value="<%= user.loan %>" placeholder="0000">
                    </div>
                    <div class="form-group">
                        <label for="liability" class="text-light">Liability</label>
                        <input type="text" name="liability" value="<%= user.liability %>" placeholder="0000">
                    </div>
                    <div class="form-group">
                        <label for="remark" class="text-light">Remark</label>
                        <input type="text" name="remark" value="<%= user.remark %>" placeholder="Null">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </main>



    <%-include('include/_footer') %>